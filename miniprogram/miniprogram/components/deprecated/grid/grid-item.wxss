.grid-item {
    flex: 1;
    text-align: center;
    align-items: center;
    justify-content: center;
    padding: 8rpx;

}

.grid-item-content {
    box-shadow: 0px 2rpx 6rpx 0px rgba(0,0,0,0.2), 0px 2rpx 2rpx 0px rgba(0,0,0,0.14), 0px 4rpx 2rpx -2rpx rgba(0,0,0,0.12);
    background: #fff;
    border-radius: 8rpx;
    padding: 32rpx;
}