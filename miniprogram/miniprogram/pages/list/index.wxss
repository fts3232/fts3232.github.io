.container {
    height: calc(100vh - constant(safe-area-inset-bottom));
    height: calc(100vh - env(safe-area-inset-bottom));
}

/** 头部 **/
.header {
    background: #fff;
    display: flex;
    align-content: center;
    flex-wrap: wrap;
    justify-content: center;
    padding: 60rpx 0;
    height: 250rpx;
    box-sizing: border-box;
}

.header .row {
    text-align: center;
    margin: 10rpx 0;
}

.header .amount {
    font-size: 50rpx;
}

/** 详情 **/
.detail {
    margin-top: 20rpx;
    background: #fff;
    padding: 40rpx 30rpx;
}

.detail .tag {
    border-radius: 40rpx;
    padding: 10rpx 20rpx;
    background: #ededed;
    color: #8e8e8e;
}

.detail .tag.active {
    border: 2rpx solid #5BC50D;
    color: #5BC50D;
    background: #ecf7f1;
}

.detail .tag + .tag {
    margin-left: 20rpx;
}

/** 列表 **/

.list {
    height: 100%;
}

.list .wrapper {
    height: 100%;

    padding: 20rpx;
    box-sizing: border-box;
}

